{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Kestrel:Certificates:Development:Password": "",
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "AppSettings": {
    "JwtSecret": "",
    "FacebookAppId": "",
    "FacebookAppSecret": "",
    "SmsAccountID": "",
    "SmsAccountPassword": "",
    "UserSecret": "",
    "EmailSecret": "",
    "TwilioSmsAccountID": "",
    "TwilioSmsAuthToken": "",
    "MailgunAPIKey": ""
  },
  "AllowedHosts": "*",
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "IpWhitelist": [ ],
    "EndpointWhitelist": [ "get:/api/license", "*:/api/status" ],
    "ClientWhitelist": [ "Admin" ],
    "GeneralRules": [
      {
        "Endpoint": "post:/api/v{version}/Users/SmsAuthenticate",
        "Period": "1d",
        "Limit": 3
      },
      {
        "Endpoint": "*:/api/v{version:apiVersion}/Orders/*",
        "Period": "1h",
        "Limit": 100        
      },
      {
        "Endpoint": "post:/api/v{version}/Users/*",
        "Period": "1h",
        "Limit": 100
      },
      {
        "Endpoint": "*:/api/v{version:apiVersion}/Products/*",
        "Period": "1d",
        "Limit": 1000
      }
    ]
  }
}